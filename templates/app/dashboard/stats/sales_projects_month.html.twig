<div class="col-lg-12" {{ attributes }}>
    <!-- -------------------------------------------- -->
    <!-- Mes ventes -->
    <!-- -------------------------------------------- -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Statistiques de vente par mois</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-2">
                    {{ form_label(form.date_begin)}}
                    {{ form_widget(form.date_begin)}}
                </div>
                <div class="col-lg-2">
                    {{ form_label(form.date_end)}}
                    {{ form_widget(form.date_end)}}
                </div>
                <div class="col-lg-5">
                    {{ form_label(form.project)}}
                    {{ form_widget(form.project)}}
                </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-start">
                <div class="row mt-3">
                    <label class="form-label">Sales</label>
                    {% for user in form.users %}
                    <div class="col-2">
                        {{ form_label(user)}}
                        {{ form_widget(user, {'attr': {'data-model': 'users[]'}}) }}
                    </div>
                    {% endfor %}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% if this.graph is not null %}
    <div class="card">
        <h3 class="text-center mt-3">{{ this.project.name }}</h3>
        <h4 class="text-center mt-3">Du {{ this.date_begin|date('d/m/Y') }} au {{ this.date_end|date('d/m/Y') }}</h4>
                <div  style="height: 285px;">
                    {{ render_chart(this.graph) }}
                </div>
    </div>
    {% endif %}
</div>