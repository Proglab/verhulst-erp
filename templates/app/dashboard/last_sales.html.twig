<div class="col-lg-12">
    <!-- -------------------------------------------- -->
    <!-- Mes ventes -->
    <!-- -------------------------------------------- -->
    <div class="card">
        <div class="card-body">
            <div class="hstack align-items-center gap-3">
                <span class="d-flex align-items-center justify-content-center round-48 bg-primary-subtle rounded flex-shrink-0">
                    <iconify-icon icon="solar:euro-bold"
                                  class="fs-7 text-primary"></iconify-icon>
                </span>
                <div>
                    <h5 class="card-title">Mes 10 dernières ventes</h5>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-sm mb-0">
                    <thead class="text-dark fs-4">
                    <tr>
                        <th scope="col" class="fs-4 fw-semibold mb-0">Client</th>
                        <th scope="col" class="fs-4 fw-semibold mb-0">Produit</th>
                        <th scope="col" class="fs-4 fw-semibold mb-0">Date</th>
                        <th scope="col" class="fs-4 fw-semibold mb-0">PU</th>
                        <th scope="col" class="fs-4 fw-semibold mb-0">Total</th>
                        <th scope="col" class="fs-4 fw-semibold mb-0">PV</th>
                        <th scope="col" class="fs-4 fw-semibold mb-0">Sales</th>
                        <th scope="col" class="fs-4 fw-semibold mb-0"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sale in this.lastSales %}
                    <tr>
                        <td class="ps-0">
                            <div class="d-flex align-items-center gap-6">
                                <div>
                                    <h6 class="mb-0">{{ sale.contact.fullname }}</h6>
                                    <span><i>{{ sale.contact.company.name }}</i></span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <h6 class="mb-0">{{ sale.product.name }}</h6>
                            <span><i>{{ sale.product.project.name }}</i></span>
                        </td>
                        <td>
                            {{ sale.date|date('d/m/y') }}
                        </td>

                        <td>
                            <span class="mb-0">{{ (sale.price)|number_format(2, ',', '.') }} €</span><br>
                            <span><i>Quantité : {{ (sale.quantity) }}</i></span>
                        </td>
                        <td>
                            <span class="mb-0">{{ (sale.totalPrice)|number_format(2, ',', '.') }} €</span><br>
                            <span><i>Réduction : {{ (sale.discount)|number_format(2, ',', '.') }} €</i></span>
                        </td>
                        <td>
                            <h6 class="nm-0">{{ (sale.marge)|number_format(2, ',', '.') }} €</h6>
                        </td>
                        <td>
                            <h6 class="mb-0">{{ sale.euroCom|number_format(2, ',', '.') }}  €</h6>
                            <i>{{ sale.percentCom }} %</i>
                        </td>
                        <td>
                        <td>
                            <div class="dropdown dropstart">
                                <a href="javascript:void(0)" class="text-muted" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <iconify-icon icon="solar:menu-dots-bold"></iconify-icon>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-3" href="javascript:void(0)"><iconify-icon icon="ic:outline-edit"></iconify-icon> Modifier</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-3" href="javascript:void(0)"><iconify-icon icon="mdi:eye"></iconify-icon> Détails</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        </td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>