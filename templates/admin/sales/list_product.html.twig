{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Création d'une vente{% endblock %}

{% block main %}
    <div class="alert alert-success mb-4">
    Vous avez sélectionné le client : <b>{{ contact.company.name }} {{ contact.firstname }} {{ contact.lastname }}</b>
    </div>

<h3>Sélectionnez le Produit</h3>
{% set url = ea_url()
    .setAction('searchProduct') %}

<input type="text" name="search" hx-get="{{ url }}" hx-trigger="keyup changed delay:500ms" hx-target="#search-results" placeholder="Search..." class="form-control">
<div id="search-results"></div>

{% endblock %}