                <thead class="table-primary">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Société</th>
                    <th scope="col">Projet</th>
                    <th scope="col">Produit</th>
                    <th scope="col">Date</th>
                    <th scope="col" class="text-right">PU</th>
                    <th scope="col" class="text-right">Réduc</th>
                    <th scope="col" class="text-right">PV</th>
                    <th scope="col" class="text-center">%S</th>
                    <th scope="col" class="text-right">€S</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>

                {% set total_price = 0 %}
                {% set total_marge = 0 %}
                {% set total_euroCom = 0 %}

                {% for sale in user.sales %}
                    {% if get_class(sale.product) == 'ProductEvent' %}
                        {% set total_price = total_price + sale.price %}
                        {% set total_marge = total_marge + sale.marge %}
                        {% set total_euroCom = total_euroCom + sale.euroCom %}
                        <tr>
                            <th scope="col">
                                <input type="checkbox" value="1" name="bdc[{{ sale.id }}]">
                            </th>
                            <th scope="row">
                                {{ sale.contact.company.name }} ({{ sale.contact.firstname }} {{ sale.contact.lastname }})
                            </th>
                            <th scope="row">
                                {{ sale.product.project.name }}
                            </th>
                            <th scope="row">{{ sale.product.name }}
                                {% if sale.product.dateBegin is not null %}
                                    {% if sale.product.dateBegin|date('d/m/y') == sale.product.dateEnd|date('d/m/y') %}
                                        ({{ sale.product.dateBegin|date('d/m/y') }})
                                    {% else %}
                                        (Du {{ sale.product.dateBegin|date('d/m/y') }} Au {{ sale.product.dateEnd|date('d/m/y') }})
                                    {% endif %}
                                {% endif %}
                            </th>
                            <td>{{ sale.date|date('d/m/y') }}</td>
                            <td class="text-right">{{ (sale.price)|number_format(2, ',', '.') }}€</td>
                            <td class="text-right">{{ (sale.discount)|number_format(2, ',', '.') }}€</td>
                            <td class="text-right">{{ sale.marge|number_format(2, ',', '.') }}€</td>
                            <td class="text-center">{{ sale.percentCom }}%</td>
                            <td class="text-right">{{ sale.euroCom|number_format(2, ',', '.') }}€</td>
                            <td class="action">
                                {% set url_edit = ea_url()
                                    .setAction('edit')
                                    .setController('App\\Controller\\Admin\\SalesCrudController')
                                    .setEntityId(sale.id)
                                %}
                                <a class=" action-edit" href="{{ url_edit }}" title="Edit" data-action-name="edit"><i class="action-icon fa fa-pencil-alt"></i></a>
                                {% set url_bdc = ea_url()
                                    .setAction('createBdc')
                                    .setController('App\\Controller\\Admin\\SalesCrudController')
                                    .setEntityId(sale.id)
                                %}
                                <a class=" action-bdc" href="{{ url_bdc }}" title="Bon de commande" data-action-name="bdc"><i class="action-icon fa fa-store"></i></a>

                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                <tr class="table-primary">
                    <th></th>
                    <th scope="row" colspan="4">
                        Totaux
