                                        <th scope="col">PA</th>
                                        <th scope="col">Marge Event</th>
                                        <th scope="col">Com Sales</th>
                                        <th scope="col">Marge Verhulst</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for sale in user.sales %}
                                        {% if get_class(sale.product) == 'ProductPackageVip' %}
