                                                <td>{{ (sale.price/100)|number_format(2, ',', ' ') }}</td>
                                                <td>?</td>
                                                <td>?</td>
                                                <td>{{ sale.percentCom }} %</td>
                                                <td>{{ sale.percentVr }} %</td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>


                        </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}