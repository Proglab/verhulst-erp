{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
   Détails de l'event
{% endblock %}
{% block page_title %}Verhulst & Friends - ERP - {{ entity.instance.name }}{% endblock %}

{% block page_actions %}
   {% for action in entity.actions %}
      {{ include(action.templatePath, { action: action }, with_context = false) }}
   {% endfor %}
   <a href="{{ ea_url()
      .setController('App\\Controller\\Admin\\Budget\\BudgetCrudController')
      .setAction('new')
      .setEntityId(null)
      .set('event_id', entity.instance.id)}}" class="btn btn-primary">Créer un budget</a>
{% endblock %}

{% block page_content %}
   <div class="col-12">
      <div class="card">
         <div class="card-body">
            <h5 class="card-title">{{ entity.instance.name }}</h5>
         </div>
         <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Responsable :</strong> {{ entity.instance.admin.fullname }}</li>
            <li class="list-group-item"><strong>Assistants :</strong> <ul>
                  {% for assistant in entity.instance.users %}
                     <li>{{ assistant.fullname }}</li>
                  {% endfor %}
               </ul></li>
         </ul>
         <div class="card-body">
            <div class="mb-3 d-flex justify-content-between align-items-center"><strong>Budgets :</strong> <a href="{{ ea_url()
                  .setController('App\\Controller\\Admin\\Budget\\BudgetCrudController')
                  .setAction('new')
                  .setEntityId(null)
                  .set('event_id', entity.instance.id)}}" class="btn btn-primary">Créer un budget</a></div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
               {% for budget in entity.instance.budgets %}
               <div class="col">
                  <div class="card">
                     <div class="card-body d-flex justify-content-between align-items-center">
                        <h5 class="card-title">{{ budget.name }} <a href="{{ ea_url()
                              .setController('App\\Controller\\Admin\\Budget\\BudgetCrudController')
                              .setAction('edit')
                              .setEntityId(budget.id)
                              .set('event_id', entity.instance.id)}}" class="btn btn-secondary ms-3"><i class="action-icon fa fa-pencil-alt"></i></a>
                        </h5><div>
                        <a href="{{ ea_url()
                           .setController('App\\Controller\\Admin\\Budget\\BudgetCrudController')
                           .setAction('detail')
                           .setEntityId(budget.id)
                           .set('event_id', entity.instance.id)}}" class="btn btn-primary"><i class="action-icon fa fa-eye"></i> Voir</a>
                        </div>
                     </div>
                  </div>
               </div>
               {% endfor %}
            </div>
         </div>
      </div>
   </div>

{% endblock %}