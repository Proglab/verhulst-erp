    <div class="row">
        {% for controller in controllers %}
        <div class="col-4">
            <h4>{{ controller }}</h4>
            {% set url = ea_url()
                .setController(controller)
                .setAction('getVoters')
                .set('role', ea.request.get('role'))%}
            <div hx-get="{{ url }}" hx-trigger="load">
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}