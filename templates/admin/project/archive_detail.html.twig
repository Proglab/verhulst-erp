{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
Projet : {{ project.name }}
{% endblock %}
{% block page_title %}Verhulst & Friends - ERP - {{ block('content_title') }}{% endblock %}

{% block main %}
    {% if project.productEvent.count > 0 %}
        <h2 class="text-uppercase text-center font-weight-bolder verhulst mb-4 p-2">Events</h2>
        <!-- Three columns of text below the carousel -->
        <div class="row mb-4">
            {% for product in project.productEvent %}
                <div class="col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3>{{ product.name }}</h3>
                        </div>
                        <div class="card-body">
                            <p><b>Du : </b> {% if product.dateBegin is not null %}{{ product.dateBegin|date('d/m/Y') }}{% else %}-{% endif %}</p>
                            <p><b>Au : </b> {% if product.dateEnd is not null %}{{ product.dateEnd|date('d/m/Y') }}{% else %}-{% endif %}</p>
                            <p>{{ product.description|raw }}</p>
                            {% if product.doc is not null %}
                                <p><a href="/files/products/{{ product.doc }}" target="_blank">Download</a></p>
                            {% endif %}
                        </div>
                    </div>
                </div><!-- /.col-lg-4 -->
            {% endfor %}
        </div>
        <hr class="featurette-divider">
    {% endif %}

    {% if project.productPackage.count > 0 %}
        <h2 class="text-uppercase text-center font-weight-bolder verhulst mb-4 p-2">Package</h2>
        <div class="row mb-4">
            {% for product in project.productPackage %}
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <h3>{{ product.name }}</h3>

                <!--
                            <div>
                                <a href="#">
                                    <i class="fa-solid fa-pen-to-square fa-2x"></i>
                                </a>
                            </div>
                            -->
                        </div>
                        <div class="card-body">
                            <div class=" text-right">
                                {% if product.ca is defined and product.ca > 0 %}<span class="btn-sm btn-primary">Prix de vente : {{ product.ca|number_format(2, ',', '.') }} €</span>{% endif %}
                            </div>
                            <p><b>Date : </b> {% if product.dateBegin is not null %}{{ product.dateBegin|date('d/m/Y') }}{% else %}-{% endif %}</p>
                            <p>{{ product.description|raw }}</p>
                            {% if product.doc is not null %}
                                <p><a href="/files/products/{{ product.doc }}" target="_blank">Download</a></p>
                            {% endif %}
                        </div>
                    </div>
                </div><!-- /.col-lg-4 -->
            {% endfor %}
        </div><!-- /.row -->
        <hr class="featurette-divider">
    {% endif %}

    {% if project.productSponsoring.count > 0 %}
