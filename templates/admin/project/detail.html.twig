                            </div>
                        </div>
                        <div class="card-body">
                            <p>{{ product.description|raw }}</p>
                            <p><b>Prix d'achat : </b> {{ product.pa|number_format(2, ',', ' ') }} €</p>
                            {% if product.doc is not null %}
                                <p><a href="/files/products/{{ product.doc }}" target="_blank">Download {{ product.doc }}</a></p>
                            {% endif %}
                        </div>
                    </div>
                </div><!-- /.col-lg-4 -->
            {% endfor %}
        </div><!-- /.row -->
        <hr class="featurette-divider">
    {% endif %}

    {% if project.productSponsoring.count > 0 %}
    <h2 class="text-uppercase text-center font-weight-bolder verhulst mb-4">Sponsoring</h2>
    <div class="row">
        {% for product in project.productSponsoring %}
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
