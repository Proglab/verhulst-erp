{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block login %}
{#    {% set minimized_logo = getWebsiteMinimizedLogo() %}#}

    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <div class="app-auth-branding mb-4">
                        <div class="app-logo">
                            <img class="logo-icon" src="{{ asset('build/portal/images/app-logo.png') }}" alt="logo-icon">
                        </div>
                    </div>
                    <h2 class="auth-heading text-center mb-5">Se connecter à {{ 'layout.site_name'|trans }}</h2>
                    <div class="auth-form-container text-start">
                        <form method="post" class="auth-form login-form">
                            {% for type, options in app.flashes %}
                                {% for option in options %}
                                    {% if type == "login_flash" %}
                                        <div class="container">
                                            <div class="alert alert-{{ option['label'] }} alert-dismissible fade show" role="alert">
                                                <p>{{ option['message']|sanitize }}</p>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security')|sanitize }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}
                            <div class="email mb-3">
                                <label class="sr-only" for="inputEmail">Email</label>
                                <input id="inputEmail" name="email" type="email" class="form-control signin-email" placeholder="Adresse email" required="required" autofocus>
                            </div>
                            <div class="password mb-3">
                                <label class="sr-only" for="inputPassword">Mot de passe</label>
                                <input id="inputPassword" name="password" type="password" class="form-control signin-password" placeholder="Mot de passe" required="required">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="extra mt-3 row justify-content-between">
                                    <div class="col-6">
                                        <div class="form-check">
                                            <input class="form-check-input" name="_remember_me" type="checkbox" id="RememberPassword">
                                            <label class="form-check-label" for="RememberPassword">
                                                Se souvenir de moi
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="forgot-password text-end">
                                            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn app-btn-primary-fill w-100 theme-btn mx-auto">Connexion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
            <div class="auth-background-holder">
            </div>
            <div class="auth-background-mask"></div>
        </div>
    </div>
{% endblock %}