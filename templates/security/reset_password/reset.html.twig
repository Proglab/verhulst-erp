{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.reset.title'|trans }}{% endblock %}

{% block login %}
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <div class="app-auth-branding mb-4">
                        <div class="app-logo">
                            <img class="logo-icon" src="{{ asset('build/portal/images/app-logo.png') }}" alt="logo-icon">
                        </div>
                    </div>
                    <div class="mt-2 mb-4">{{ component('locale_choice') }}</div>
                    <h2 class="auth-heading text-center mb-4">{{ 'reset_password.reset.title'|trans }}</h2>

                    <div class="auth-form-container text-left">
                        {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword.first) }}
                        {{ form_row(resetForm.plainPassword.second) }}
                        <small>
                            {{ 'form_theme.secure_password.intro'|trans }} :
                            <ul>
                                <li>{{ 'form_theme.secure_password.characters_count'|trans }}</li>
                                <li>{{ 'form_theme.secure_password.maj_count'|trans }}</li>
                                <li>{{ 'form_theme.secure_password.number_count'|trans }}</li>
                                <li>{{ 'form_theme.secure_password.special_character_count'|trans }}</li>
                            </ul>
                        </small>
                        <div class="text-center">
                            <button type="submit" name="_submit" class="btn app-btn-primary-fill btn-block theme-btn mx-auto">{{ 'reset_password.reset.submit'|trans }}</button>
                        </div>
                        {{ form_end(resetForm) }}

                        <div class="auth-option text-center pt-5"><a class="app-link" href="{{ path('app_login') }}">{{ 'login.form.submit'|trans }}</a></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
            <div class="auth-background-holder">
            </div>
            <div class="auth-background-mask"></div>
        </div>
    </div>
{% endblock %}