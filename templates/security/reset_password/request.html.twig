{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block login %}
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <div class="app-auth-branding mb-4">
                        <div class="app-logo">
                            <img class="logo-icon" src="{{ asset('build/portal/images/app-logo.png') }}" alt="logo-icon">
                        </div>
                    </div>
                    <h2 class="auth-heading text-center mb-4">Mot de passe oublié</h2>

                    <div class="auth-intro mb-4 text-center">Entrez votre adresse email ci-dessous. Nous vous enverrons par email un lien vers une page où vous pourrez facilement créer un nouveau mot de passe.</div>

                    {% for type, messages in app.flashes %}
                        {% if type == "reset_password_error" %}
                            <div class="container">
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {% for message in messages %}
                                        <p>{{ message|sanitize }}</p>
                                    {% endfor %}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                    <div class="auth-form-container text-left">

                        {{ form_start(requestForm) }}
                        <div class="email mb-3">
                            {{ form_row(requestForm.email) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn app-btn-primary-fill btn-block theme-btn mx-auto">Envoyer</button>
                        </div>
                        {{ form_end(requestForm) }}

                        <div class="auth-option text-center pt-5"><a class="app-link" href="{{ path('app_login') }}">Connexion</a></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
            <div class="auth-background-holder">
            </div>
            <div class="auth-background-mask"></div>
        </div>
    </div>
{% endblock %}